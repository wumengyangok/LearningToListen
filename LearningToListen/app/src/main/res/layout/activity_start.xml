<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/colorBackground">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title"
        android:textSize="6mm"
        android:textColor="#050505"
        android:id="@+id/textView_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_play"
        android:layout_below="@+id/textView_title"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="65dp"
        android:text="@string/play"
        android:textSize="4mm"
        android:layout_alignLeft="@+id/textView_title"
        android:layout_alignStart="@+id/textView_title"
        android:layout_alignRight="@+id/textView_title"
        android:layout_alignEnd="@+id/textView_title"
        android:onClick="onClickPlay"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_setting"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="65dp"
        android:text="@string/setting"
        android:textSize="4mm"
        android:layout_below="@+id/button_play"
        android:layout_alignLeft="@+id/button_play"
        android:layout_alignStart="@+id/button_play"
        android:layout_alignRight="@+id/button_play"
        android:layout_alignEnd="@+id/button_play"
        android:onClick="onClickSetting"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_information"
        android:background="@drawable/rounded_button"
        android:text="@string/information"
        android:textSize="4mm"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button_setting"
        android:layout_alignStart="@+id/button_setting"
        android:layout_marginBottom="64dp"
        android:layout_alignRight="@+id/button_setting"
        android:layout_alignEnd="@+id/button_setting"
        android:onClick="onClickGetInfo" />
</RelativeLayout>